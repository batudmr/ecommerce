generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  phoneNum String
  firstName String
  lastName String

  @@map("users")
}

model Product {
  id Int @id @default(autoincrement())
  name String
  slug String @unique
  description String?
  categoryId Int?
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  productInventory ProductInventory[]
  is_active Boolean @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("products")
}

model Category {
  id Int @id @default(autoincrement())
  name String
  slug String @unique
  is_active Boolean @default(false)
  product Product[]

  @@map("categories")
}

model Brand {
  id Int @id @default(autoincrement())
  name String @unique
  productInventory ProductInventory[]
}


model ProductAttribute {
  id Int @id @default(autoincrement())
  name String @unique
  description String
  productType ProductType[]
  productAttrValue ProductAttributeValue[]
}


model ProductType {
  id Int @id @default(autoincrement())
  name String @unique
  productAttr ProductAttribute[]
  productInv ProductInventory[]
}

model ProductAttributeValue {
  id Int @id @default(autoincrement())
  productAttrId Int
  productAttribute ProductAttribute @relation(fields: [productAttrId], references: [id], onDelete: Cascade)
  attributeValue String
  productInv ProductInventory[]
}



model ProductInventory {
  id Int @id @default(autoincrement())
  sku String @unique 
  stock Int 
  productTypeId Int
  productType ProductType @relation(fields: [productTypeId], references: [id], onDelete: Restrict)
  productId Int
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  brandId Int
  brand Brand @relation(fields: [brandId], references: [id], onDelete: SetNull)
  attrValues ProductAttributeValue[]
  media ProductMedia?
  is_active Boolean @default(false)
  is_default Boolean @default(false)
  retail_price Decimal @db.Decimal(6,2)
  store_price Decimal @db.Decimal(6,2)
  weight Float
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model ProductMedia {
  id Int @id @default(autoincrement())
  sku String
  productInv ProductInventory @relation(fields: [sku], references: [sku])
  imageUrl String 
  altText String
  isFeature Boolean @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

