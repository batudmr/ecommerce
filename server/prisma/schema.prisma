// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  phoneNum String
  firstName String
  lastName String
}

model Product {
  id Int @id
  name String
  slug String
  description String
  category String
  is_active Boolean
  created_at DateTime 
  updated_at DateTime @updatedAt
}